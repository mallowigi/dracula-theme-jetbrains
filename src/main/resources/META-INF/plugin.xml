<idea-plugin>
    <id>com.mallowigi.dracula</id>
    <name>Dracula Theme</name>
    <vendor email="heliosaian@gmail.com" url="http://www.material-theme.com">Material Theme</vendor>

    <description><![CDATA[
    Add Dracula Theme (https://draculatheme.com/) to be used alongside the Material Theme UI plugin (https://www.material-theme.com).
    ]]></description>

    <depends>com.chrisrm.idea.MaterialThemeUI</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.chrisrm.idea.MaterialThemeUI">
        <bundledTheme name="Dracula" path="/themes/dracula"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <bundledColorScheme path="colors/Dracula" id="Dracula"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>
